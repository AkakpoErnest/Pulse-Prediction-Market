REACTIVE_SERVICE_ADDRESS=

# ─── Explorer Verification ────────────────────────────────────────────────────
SOMNIA_EXPLORER_API_KEY=placeholder

# ─── Gas Reporting ────────────────────────────────────────────────────────────
REPORT_GAS=false
