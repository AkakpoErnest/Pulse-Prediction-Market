NEXT_PUBLIC_PULSE_MARKET_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_EVENT_HANDLER_ADDRESS=0x0000000000000000000000000000000000000000

# WalletConnect Project ID — get one free at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here
